<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lynhaw.g4test.mybatis.mapper.SqlInfoMapper">

    <select id="findsqlInfo" resultType="com.lynhaw.g4test.mybatis.beans.SqlInfoBean">
        select * from TB_YX_G4TEST_SQLINFO WHERE  id = #{id}
    </select>

    <select id="findsqlInfobyInfo" resultType="com.lynhaw.g4test.mybatis.beans.SqlInfoBean" parameterType="string">
        select * from TB_YX_G4TEST_SQLINFO WHERE  sqlconninfo LIKE '%${sqltestinfo}%'
    </select>

    <select id="findsqlcount" resultType="java.lang.Integer">
        select count(1) from TB_YX_G4TEST_SQLINFO
    </select>

    <select id="findlimitsqlInfo" resultType="com.lynhaw.g4test.mybatis.beans.SqlInfoBean">
        select * from TB_YX_G4TEST_SQLINFO limit #{limitStart},#{limitEnd}
    </select>
    <insert id="addsqlInfo" parameterType="com.lynhaw.g4test.mybatis.beans.SqlInfoBean">
        insert into TB_YX_G4TEST_SQLINFO (sqlmode,sqlconninfo,sqlusername,sqlpassword,sqlname)
        values (#{sqlmode,jdbcType=VARCHAR},#{sqlconninfo,jdbcType=VARCHAR},#{sqlusername,jdbcType=VARCHAR},#{sqlpassword,jdbcType=VARCHAR},#{sqlname,jdbcType=VARCHAR}
        )
    </insert>
    <delete id="deleteSql" parameterType="java.lang.Integer">
        delete from TB_YX_G4TEST_SQLINFO where id = #{id}
    </delete>

    <update  id="updateSql" parameterType="com.lynhaw.g4test.mybatis.beans.SqlInfoBean">
      UPDATE TB_YX_G4TEST_SQLINFO SET sqlmode=#{sqlmode},sqlconninfo=#{sqlconninfo},sqlusername=#{sqlusername},sqlpassword=#{sqlpassword},sqlname=#{sqlname} where id=#{id}
    </update >

</mapper>